<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red_principal">

    <TextView
        android:id="@+id/tv_pokename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amatica_sc"
        android:textColor="@color/white"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_screen_pokedex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_screen_pokedex"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        android:layout_marginTop="55dp"

        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/iv_pokemon"
            android:layout_width="300dp"
            android:layout_height="300dp"


            android:background="@color/black"

            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/gif_pickachu" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <AutoCompleteTextView
        android:id="@+id/field_pokemon"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"


        android:background="@drawable/style_text_field"
        android:fontFamily="@font/amatica_sc"
        android:gravity="center"
        android:hint="Search your pokemon"
        android:textSize="22dp"




        app:layout_constraintTop_toBottomOf="@id/layout_screen_pokedex"
         />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="Search"

        app:layout_constraintTop_toBottomOf="@+id/field_pokemon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>